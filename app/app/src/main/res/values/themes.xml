<resources>
    <!-- Minimal Samsung-compatible theme -->
    <style name="Base.Theme.App1" parent="Theme.Material3.Light.NoActionBar">
        <!-- Only essential colors for Samsung compatibility -->
        <item name="colorPrimary">#FFE53E3E</item>
        <item name="colorOnPrimary">#FFFFFFFF</item>
        <item name="android:colorBackground">#FFFFFFFF</item>
        <item name="colorSurface">#FFFFFFFF</item>
        <item name="android:textColorPrimary">#FF000000</item>
        <item name="android:statusBarColor">#FFE53E3E</item>
    </style>

    <style name="Theme.App1" parent="Base.Theme.App1" />
    
    <!-- AppBar overlay style -->
    <style name="Theme.App1.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSurface">@color/primary</item>
    </style>
    
    <!-- Popup overlay style -->
    <style name="Theme.App1.PopupOverlay" parent="ThemeOverlay.Material3.Light" />
    
    <!-- Card Styles -->
    <style name="CardView.Welcome" parent="Widget.Material3.CardView.Elevated">
        <item name="cardElevation">6dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="strokeColor">@color/card_stroke</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
    <!-- Text Styles -->
    <style name="TextAppearance.App1.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.App1.Title" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.App1.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="TextAppearance.App1.Caption" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textColor">@color/text_tertiary</item>
    </style>
    
    <!-- Button Styles -->
    <style name="Button.App1.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="cornerRadius">12dp</item>
    </style>
    
    <style name="Button.App1.Secondary" parent="Widget.Material3.Button.TonalButton">
        <item name="backgroundTint">#171FB6</item>
        <item name="android:textColor">@color/text_on_secondary</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="Theme.App1.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/primary_variant</item>
    </style>
</resources>

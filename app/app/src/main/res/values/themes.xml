<resources>
    <!-- Comprehensive Samsung-compatible theme -->
    <style name="Base.Theme.App1" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary colors - Using modern vibrant palette -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        
        <!-- Status bar with gradient color -->
        <item name="android:statusBarColor">@color/primary</item>
        
        <!-- Text colors using modern palette -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Enable modern transitions -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="Theme.App1" parent="Base.Theme.App1" />
    
    <!-- AppBar overlay style with modern gradient -->
    <style name="Theme.App1.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorPrimary">@color/secondary</item>
        <item name="colorSurface">@color/secondary</item>
        <item name="android:background">@drawable/gradient_secondary</item>
    </style>
    
    <!-- Popup overlay style -->
    <style name="Theme.App1.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
    
    <!-- Card Styles -->
    <style name="CardView.Welcome" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">6dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="strokeColor">@color/card_stroke</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
    <!-- Text Styles -->
    <style name="TextAppearance.App1.Headline" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.App1.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.App1.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="TextAppearance.App1.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/text_tertiary</item>
    </style>
    
    <!-- Enhanced Button Styles -->
    <style name="Button.App1.Primary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:elevation">2dp</item>
    </style>
    
    <style name="Button.App1.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/secondary</item>
        <item name="android:textColor">@color/text_on_secondary</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">2dp</item>
    </style>
</resources>

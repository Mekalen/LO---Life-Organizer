<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_primary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <TextView
                android:id="@+id/textDashboardTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dashboard_title"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="32dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:shadowColor="@color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="3" />

            <!-- Stats Cards Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp"
                android:baselineAligned="false">

                <!-- Tasks Progress Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="20dp"
                    android:background="@drawable/card_modern"
                    app:cardBackgroundColor="@color/white"
                    app:strokeColor="@color/primary_light"
                    app:strokeWidth="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/today_tasks"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary" />

                        <TextView
                            android:id="@+id/textTasksProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0/0 completed"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Habit Streak Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="20dp"
                    android:background="@drawable/card_modern"
                    app:cardBackgroundColor="@color/white"
                    app:strokeColor="@color/primary"
                    app:strokeWidth="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/habit_streak"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/secondary" />

                        <TextView
                            android:id="@+id/textHabitStreak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Avg: 0 days"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Goal Progress Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="20dp"
                    android:background="@drawable/card_modern"
                    app:cardBackgroundColor="@color/white"
                    app:strokeColor="@color/accent_orange"
                    app:strokeWidth="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/goal_progress"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/accent_orange" />

                        <TextView
                            android:id="@+id/textGoalProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Avg: 0%"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Mood Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/card_background"
                app:strokeColor="@color/card_stroke"
                app:strokeWidth="1dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/daily_mood"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/textMoodStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap to set your mood"
                        android:textSize="16sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/textMoodDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Not set yet"
                        android:textSize="14sp"
                        android:textColor="@color/text_tertiary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Today's Tasks Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/today_tasks"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:shadowColor="@color/black"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2" />
                    
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonAddTaskFromDashboard"
                    style="@style/Widget.Material3.Button.UnelevatedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_task_encouraging"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_modern"
                    app:icon="@android:drawable/ic_input_add"
                    app:iconSize="18dp"
                    app:iconTint="@color/white" />
                    
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewTasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:clipToPadding="false"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:minHeight="120dp"
                tools:listitem="@layout/item_task_card" />

            <!-- Habits Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/habits_title"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:shadowColor="@color/black"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2" />
                    
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonAddHabitFromDashboard"
                    style="@style/Widget.Material3.Button.UnelevatedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_habit_encouraging"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_modern"
                    app:icon="@android:drawable/ic_input_add"
                    app:iconSize="18dp"
                    app:iconTint="@color/white" />
                    
            </LinearLayout>

            <!-- Goals Section -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewHabits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:clipToPadding="false"
                android:minHeight="120dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                tools:listitem="@layout/item_habit_card" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/goals_title"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:shadowColor="@color/black"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2" />
                    
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonAddGoalFromDashboard"
                    style="@style/Widget.Material3.Button.UnelevatedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_goal_encouraging"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_modern"
                    app:icon="@android:drawable/ic_input_add"
                    app:iconSize="18dp"
                    app:iconTint="@color/white" />
                    
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewGoals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:clipToPadding="false"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:minHeight="120dp"
                tools:listitem="@layout/item_goal_card" />

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

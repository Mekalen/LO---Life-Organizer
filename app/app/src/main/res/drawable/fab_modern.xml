<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient
                android:startColor="@color/accent_orange"
                android:endColor="@color/accent_pink"
                android:angle="135" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="@color/secondary"
                android:endColor="@color/secondary_variant"
                android:angle="45" />
        </shape>
    </item>
</selector>

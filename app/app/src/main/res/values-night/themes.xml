<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for dark mode -->
    <style name="Base.Theme.App1" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors (slightly lighter for dark mode) -->
        <item name="colorPrimary">#FF5BA3F5</item>
        <item name="colorPrimaryVariant">#FF4A90E2</item>
        <item name="colorSecondary">#FF66D683</item>
        <item name="colorSecondaryVariant">#FF50C878</item>
        
        <!-- Dark Background and Surface -->
        <item name="android:colorBackground">#FF0F172A</item>
        <item name="colorSurface">#FF1E293B</item>
        <item name="colorSurfaceVariant">#FF334155</item>
        
        <!-- Text Colors for Dark Mode -->
        <item name="android:textColorPrimary">#FFF1F5F9</item>
        <item name="android:textColorSecondary">#FFCBD5E1</item>
        <item name="android:textColorTertiary">#FF94A3B8</item>
        
        <item name="colorOnPrimary">#FFFFFFFF</item>
        <item name="colorOnSecondary">#FFFFFFFF</item>
        <item name="colorOnBackground">#FFF1F5F9</item>
        <item name="colorOnSurface">#FFF1F5F9</item>
        
        <!-- Status Bar for Dark Mode -->
        <item name="android:statusBarColor">#FF1E293B</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        
        <!-- Navigation Bar for Dark Mode -->
        <item name="android:navigationBarColor">#FF1E293B</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
    </style>
</resources>
